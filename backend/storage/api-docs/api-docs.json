                                                },
                                                "id_category": {
                                                    "type": "integer",
                                                    "example": 3
                                                },
                                                "amount": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 500
                                                },
                                                "description": {
                                                    "type": "string",
                                                    "example": "Pendapatan dari freelance"
                                                },
                                                "date": {
                                                    "type": "string",
                                                    "format": "date",
